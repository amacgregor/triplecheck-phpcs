{
    "name": "amacgregor/triplecheck-phpcs",
    "require": {
        "adambrett/shell-wrapper": "*",
        "amacgregor/triplecheck-common": "dev-develop",
        "squizlabs/php_codesniffer": "2.0.*@dev",
        "magento-ecg/coding-standard": "dev-master",
        "symfony/console": "2.6.*"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1",
        "phpunit/phpunit": "~4.6",
        "mockery/mockery": "0.9.*",
        "behat/behat": "~3.0",
        "bossa/phpspec2-expect": "dev-master"
    },
    "type": "library",
    "config": {
       "bin-dir": "bin"
     },
    "autoload": { 
        "psr-0": { 
            "Triplecheck\\Common\\": "../triplecheck-common/src/",
            "Triplecheck\\Phpcs\\": "src/" 
        }
    },
    "repositories": [
      {
        "type": "vcs",
        "url": "git@github.com:jamescowie/triplecheck-common.git"
      }
    ],
    "authors": [
        {
            "name": "Allan MacGregor",
            "email": "amacgregor@allanmacgregor.com"
        }
    ],
    "bin": ["bin/triplecheck"]
}
